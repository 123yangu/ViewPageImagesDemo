<?xml version="1.0" encoding="utf-8"?>
<resources>
      <declare-styleable name="BounceBackViewPager">

        <!--
	    determines the maximum amount of translation along the z-axis during the overscroll. 
	    Default is 150.

        -->
        <attr name="overscroll_translation1" format="dimension" />

        <!-- Duration of animation when user releases the over scroll. Default is 400 ms. -->
        <attr name="overscroll_animation_duration1" format="integer" />
    </declare-styleable>
    
       <!-- 指示器 -->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_background" format="color|integer" />
        <attr name="ci_selected_background" format="color|integer" />
        <attr name="ci_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
            <enum name="solo" value="2" />
        </attr>
    </declare-styleable>
</resources>
